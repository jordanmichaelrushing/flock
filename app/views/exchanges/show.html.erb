<h1><%= "Exchange: #{@exchange.name}" %></h1>
<h2><%= "Location: #{@exchange.location}" %></h2>
<h2><%= "Active? #{@exchange.active?.to_s.capitalize}" %></h2>
<br>
<h2><%= @exchange.name %>'s Stocks</h2>

<% if @exchange.stocks.count > 0 %>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Edit</th>
        <th>Destroy</th>
      </tr>
    </thead>

    <tbody>
      <% @exchange.stocks.each do |stock| %>
        <tr>
          <td><%= link_to stock.name, exchange_stock_path(exchange_id: @exchange.id, id: stock.id
          ) %></td>
          <td><%= link_to 'Edit', edit_exchange_stock_path(exchange_id: @exchange.id, id: stock.id) %></td>
          <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h5> None </h5><br>
<% end %>
<br>
<%= link_to "Edit #{@exchange.name}", edit_exchange_path(@exchange) %> |
<%= link_to "Back", exchanges_path %>
