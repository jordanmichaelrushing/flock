<h1>Stocks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= link_to stock.name, exchange_stock_path(exchange_id: @exchange.id, id: stock.id) %></td>
        <td><%= link_to 'Edit', edit_exchange_stock_path(exchange_id: @exchange.id, id: stock.id) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stock', new_exchange_stock_path(exchange_id: @exchange.id) %>
